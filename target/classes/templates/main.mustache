<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Main</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body class="container-fluid">
<h2>List of items:</h2>
<div class="form-group">
    <form method="post" class="form-inline">
        <input type="text" name="name" placeholder="Enter an item" class="form-control">
        <input type="text" name="category" placeholder="Enter a category" class="form-control">
        <br>
        <textarea name="description" placeholder="Enter a description" class="form-control"></textarea>
        <!--<input type="text" name="description" placeholder="Enter a description" class="form-control">-->
        <button type="submit" class="btn btn-default">Add</button>
    </form>
</div>
<div class="form-group">
    <form method="post" action="filter" class="form-inline">
        <input type="text" name="name" class="form-control">
        <button type="submit" class="btn btn-default">FindByName</button>
    </form>
</div>
<div class="form-group">
    <form method="post" action="delete" class="form-inline">
        <input type="number" name="id" class="form-control">
        <button type="submit" class="btn btn-default">DeleteById</button>
    </form>
</div>
<div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>id</th>
            <th>name</th>
            <th>category</th>
            <th>description</th>
        </tr>
        {{#items}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{category}}</td>
            <td>{{description}}</td>
        </tr>
        {{/items}}
    </table>
</div>
</body>
</html>